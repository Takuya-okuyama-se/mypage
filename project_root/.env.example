# Flask アプリケーション設定
# ランダムな文字列を生成してください: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=False

# データベース接続設定
MYSQL_HOST=your-mysql-host
MYSQL_USER=your-mysql-user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=your-database-name
MYSQL_PORT=3306

# Google Calendar API
# https://console.cloud.google.com/ でAPIキーを取得
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_CALENDAR_ID=your-calendar-id@gmail.com

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your-google-vision-api-key

# 追加のGoogle Vision API Key（必要な場合）
GOOGLE_VISION_API_KEY_2=your-second-google-vision-api-key

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=app.log